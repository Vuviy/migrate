#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use App\Console\FreshCommand;
use App\Console\MakeMigrationCommand;
use App\Console\MigrateCommand;
use App\Console\ResetCommand;
use App\Console\RollbackCommand;
use App\Console\SeedCommand;
use App\Console\StatusCommand;
use Symfony\Component\Console\Application;

$app = new Application('My CLI');

$app->addCommands(
        [
            new MakeMigrationCommand(),
            new MigrateCommand(),
            new RollbackCommand(),
            new ResetCommand(),
            new FreshCommand(),
            new StatusCommand(),
            new SeedCommand(),
        ]);

$app->run();